<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_top_height"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/llyt_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/qa_title_padding_left"
            android:layout_marginRight="@dimen/qa_title_padding_right"
            android:alpha="0.8"
            android:background="@drawable/bg_study_consultants_border14"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_study_consultans_select_border14"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="全部回答"
                android:textColor="@drawable/text_study_consultants"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_study_consultans_select_border14"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="重点关注"
                android:textColor="@drawable/text_study_consultants"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/my_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_study_consultans_select_border14"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="我的回答"
                android:textColor="@drawable/text_study_consultants"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_subcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/qa_title_circle_padding_right"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:minHeight="18dp"
            android:minWidth="18dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:clickable="true"
            android:paddingLeft="@dimen/app_top_right_btn_marginleftright"
            android:paddingRight="@dimen/app_top_right_btn_marginright"
            android:scaleType="centerInside"
            android:src="@drawable/ic_my_info"
            android:transitionName="btn_tr" />
    </FrameLayout>

    <View style="@style/horizontal_line" />
</LinearLayout>