<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="210dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="75dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="32"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="昵称"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_nick_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="32"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="工作职称"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_work_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="工作经验"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_work_experience"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:id="@+id/ll_city"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="工作城市"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_work_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_go_to" />
            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="毕业院校"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_graduated_school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="邮箱"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:id="@+id/ll_good_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:paddingBottom="22dp"
                    android:paddingTop="22dp"
                    android:text="擅长业务"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <study.smart.baselib.ui.widget.TagsLayout
                    android:id="@+id/tly_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:paddingBottom="12dp"
                    android:paddingTop="20dp"
                    android:visibility="visible"
                    app:padding_bottom_top="6dp"
                    app:padding_left_right="10dp"
                    app:tagHorizontalSpace="8dp"
                    app:tagVerticalSpace="8dp"
                    app:textChildSize="@dimen/app_text_size2"
                    app:textColor="#26343F" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingTop="26dp"
                    android:src="@drawable/ic_go_to" />

            </LinearLayout>

            <View
                style="@style/horizontal_line"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingBottom="22dp"
                    android:paddingTop="22dp"
                    android:text="个人简介"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_personal_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:paddingBottom="24dp"
                    android:paddingTop="24dp"
                    android:textColor="@color/app_text_color2"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_bg"
                android:paddingBottom="18dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="注：姓名和邮箱仅用于审核和通知，不对外展示"
                android:textColor="#c4c9cc"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_login_out"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/title_line"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="视频上传中"
            android:textColor="@color/app_text_color1"
            android:textSize="@dimen/app_text_size4" />

        <ProgressBar
            android:id="@+id/pb_qa"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_horizontal" />

    </LinearLayout>

    <include
        layout="@layout/layout_play_video"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_progress" />

    <FrameLayout
        android:id="@+id/fl_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp">

        <study.smart.baselib.ui.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/rc_default_portrait"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo_image" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_upLoad"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_upload" />

        <ImageView
            android:id="@+id/iv_video_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_video_info" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/bg_add_good"
        android:drawableLeft="@drawable/ic_add_good"
        android:drawablePadding="5dp"
        android:textColor="@color/white"
        android:textSize="11sp" />

</RelativeLayout>
