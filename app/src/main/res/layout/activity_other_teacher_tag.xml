<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llyt_err"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_err"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/page_err_img_margin_t"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_no_collection" />

            <TextView
                android:id="@+id/tv_err_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="还没有老师对该用户进行标注"
                android:textColor="@color/app_text_color3"
                android:textSize="@dimen/app_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:max_select="1" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>