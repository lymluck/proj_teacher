<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.smartstudy.counselor_t.ui.widget.AudioRecordView
        android:id="@+id/ar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.smartstudy.counselor_t.ui.widget.AudioRecordView>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_voice_play"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_audio_stop" />
    </LinearLayout>

</LinearLayout>