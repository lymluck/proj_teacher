<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_focus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/ll_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_asker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_asker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:paddingLeft="8dp"
                android:textColor="@color/app_text_color2"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_location_border2"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="70dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/bg_sorce_from_border2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_schoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_school_border2"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="110dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_qa_answer2"
                android:gravity="center"
                android:text="问"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="8dp"
                android:textColor="@color/app_text_color2"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="48dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tv_ask_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E4E5E6"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <study.smart.baselib.ui.widget.DrawableTextView
            android:id="@+id/dtv_focus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_follow_gray"
            android:gravity="center_vertical"
            android:text="重点关注"
            android:textSize="13sp"
            android:visibility="invisible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#E4E5E6"
            android:visibility="invisible" />

        <study.smart.baselib.ui.widget.DrawableTextView
            android:id="@+id/dtv_callout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_qa_tag"
            android:gravity="center_vertical"
            android:text="标注用户"
            android:textSize="13sp"
            android:visibility="invisible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#E4E5E6"
            android:visibility="invisible" />

        <study.smart.baselib.ui.widget.DrawableTextView
            android:id="@+id/dtv_telephone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_telephone"
            android:gravity="center_vertical"
            android:text="联系对方"
            android:textSize="13sp"
            android:visibility="invisible" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#E4E5E6"
            android:visibility="invisible" />

        <study.smart.baselib.ui.widget.DrawableTextView
            android:id="@+id/dtv_transfer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_recommen"
            android:gravity="center_vertical"
            android:text="转介绍"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp">

        <ImageView
            android:id="@+id/iv_step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_focus_step1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_focus_step2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_focus_step3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_step4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_focus_step4"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>

